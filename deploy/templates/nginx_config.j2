server {
    listen 80;
    root {{ static_path }};

    location / {
        try_files $uri $uri/index.html;
    }

    location /applications/ {
        proxy_pass http://server:{{ server_port }}/applications/;
    }
}

server {
   listen 80;
   server_name *.{{ domain-name }};

   location / {
       proxy_pass http://unit/;
   }
}
