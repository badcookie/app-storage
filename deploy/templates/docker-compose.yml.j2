version: "3.5"

{% set develop = env == 'development' %}

services:
  unit:
    build:
      dockerfile: unit.Dockerfile
      context: .
    image: ${PROJECT_NAME}:unit
    container_name: ${PROJECT_NAME}-unit
    network_mode: host
    command:
      ["unitd", "--no-daemon", "--control", "127.0.0.1:${UNIT_PORT:-{{ unit_port }}}"]
    volumes:
      - {% if develop -%} ${APPS_PATH} {%- else -%} apps {%- endif -%}:${MOUNTED_APPS_PATH}

  db:
    image: mongo
    container_name: ${PROJECT_NAME}-db
    volumes:
      - db:/data/db
    environment:
      MONGO_INITDB_ROOT_USERNAME: ${DB_USER}
      MONGO_INITDB_ROOT_PASSWORD: ${DB_PASSWORD}
    ports:
      - ${DB_PORT:-{{ db_port }}}:27017

  server:
    build:
      context: .
      dockerfile: server.Dockerfile
    image: ${PROJECT_NAME}:server
    container_name: ${PROJECT_NAME}-server
    command: python server/main.py
    env_file:
      - .env
    ports:
      - ${SERVER_PORT:-{{ server_port }}}:${SERVER_PORT:-{{ server_port }}}
    volumes:
      - {% if develop -%} ${APPS_PATH} {%- else -%} apps {%- endif -%}:${MOUNTED_APPS_PATH}

  ui:
    build:
      context: .
      dockerfile: ui.Dockerfile
    image: ${PROJECT_NAME}:ui
    container_name: ${PROJECT_NAME}-ui
    ports:
      - {% if develop -%} 8123 {%- else -%} 80 {%- endif -%}:80
      - {% if develop -%} 8443 {%- else -%} 443 {%- endif -%}:443
    volumes:
      - static:{{ static_path }}
      - ./nginx_config:/etc/nginx/conf.d/default.conf


volumes:
  db: {}
  static: {}
  {% if not develop %}apps: {}{% endif %}
